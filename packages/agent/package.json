{
  "name": "@code-crow/agent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "cli": "tsx src/cli.ts",
    "cli:execute": "tsx src/cli.ts execute",
    "cli:scan": "tsx src/cli.ts scan",
