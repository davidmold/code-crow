    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "socket.io-client": "^4.7.5",
    "dotenv": "^16.4.5",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  }
}